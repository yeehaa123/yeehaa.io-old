---
interface Props {
  maxContainerWidth?: string;
}

import "open-props/normalize";
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";

const navItems = [
  { pageName: "ABOUT", href: "/about" },
  { pageName: "POSTS", href: "/posts" },
  { pageName: "CONNECT", href: "/connect" },
];

const { maxContainerWidth } = Astro.props;
---

<html lang="en">
  <html transition:animate="none">
    <head>
      <meta charset="utf-8" />
      <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
      <meta name="viewport" content="width=device-width" />
      <meta name="generator" content={Astro.generator} />
      <ViewTransitions />

      <title>Astro</title>
    </head>
    <body>
      <Header {navItems} />
      <main>
        <slot />
      </main>
      <Footer />
    </body><style define:vars={{ maxContainerWidth }}>
      main {
        max-inline-size: var(--maxContainerWidth, var(--size-lg));
        margin-inline: auto;
      }
    </style>
  </html>
</html>
