---
import Base from "../../layouts/Base.astro";
import { getCollection } from "astro:content";
const entries = await getCollection("Work");
---

<Base maxContainerWidth="var(--size-lg)">
  <section>
    <ul>
      {
        entries.map(({ data, slug }) => (
          <li>
            <a href={`/output/${slug}`} id={data.title}>
              {data.title}
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</Base>
