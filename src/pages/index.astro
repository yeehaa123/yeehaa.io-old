---
import Landing from "../layouts/Landing.astro";
import Section from "../components/homepage/SectionSelector.astro";

export const prerender = true;
---

<Landing collectionName="Home" maxContainerWidth="100%" {Section} />

<style is:global>
  #tagline {
    --text-color: var(--text-color);
  }
  #proposition {
    --background-color: var(--primary-color);
    --text-color: var(--negative-text-color);
  }
  #problem-statement {
    --background-color: var(--tertiary-color);
    padding-block: var(--size-9);
  }
  #principles {
    --background-color: var(--secondary-color);
  }
  #cases {
    --background-color: var(--primary-color);
    --text-color: var(--curtains);
    --negative-text-color: var(--white);
  }

  #call-to-action {
    --background-color: var(--primary-color);
    --text-color: var(--curtains);
    --negative-text-color: var(--white):
  }
</style>
