---
import Base from "../../layouts/base.astro";
import { getCollection } from "astro:content";
const entries = await getCollection("Posts");
---

<Base>
  <ul>
    {
      entries.map(({ data, slug }) => (
        <li>
          <a href={`/posts/${slug}`} id={data.title}>
            {data.title}
          </a>
        </li>
      ))
    }
  </ul>
</Base>
