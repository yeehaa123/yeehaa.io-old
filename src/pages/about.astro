---
import Landing from "../layouts/Landing.astro";
import Section from "../components/about/SectionSelector.astro";
---

<Landing collectionName="About" {Section} />

<style is:global>
  @import "open-props/media";
  main {
    display: grid;
    max-inline-size: var(--size-lg);
    margin-inline: auto;
  }

  #flaws {
    --backgroundColor: var(--fire);
    --textColor: var(--white);
  }
  #solution {
    --backgroundColor: var(--sun);
    --textColor: var(--curtains);
    p,
    strong,
    a {
      font-weight: var(--font-weight-7);
    }
  }
  #call-to-action {
    background-color: var(--sun);
  }

  @media (--md-n-above) {
    main {
      display: grid;
      grid-template-columns: repeat(6, 1fr);
    }
    #opening {
      grid-column: span 6;
    }

    #background {
      grid-column: span 3;
      margin-inline: var(--size-9);
    }

    #context {
      grid-column: span 3;
      margin-block-start: 100px;
    }

    #flaws {
      grid-column: span 4;
      margin-block-start: -100px;
    }

    #conflict {
      grid-column: span 2;
      align-items: flex-start;
      justify-content: flex-end;
      display: flex;
      margin-inline-start: var(--size-5);
      margin-block-end: 25%;
      flex-direction: column;
    }

    #problem {
      grid-column: span 6;
    }

    #solution {
      grid-column: span 6;
      strong {
        align-self: flex-start;
        font-size: var(--size-7);
      }
      p {
        font-size: var(--size-5);
      }
    }
    #process {
      grid-column: span 6;
      strong {
        align-self: flex-start;
        font-size: var(--size-7);
      }
    }
    #benefits {
      grid-column: span 6;
      strong {
        align-self: flex-start;
        font-size: var(--size-7);
      }
    }

    #call-to-action {
      margin-block-start: -200px;
      margin-inline: 15%;
      grid-column: span 6;
    }
  }
</style>
