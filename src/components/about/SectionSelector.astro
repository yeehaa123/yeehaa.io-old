---
interface Props {
  Content: any;
  slug: string;
  index: number;
}

import Default from "../Section.astro";
import Quote from "./Quote.astro";
import BareBubble from "./BareBubble.astro";
import Bubble from "./Bubble.astro";
import BigBubble from "./BigBubble.astro";
import CTA from "./CTA.astro";
const { slug: id, Content, index } = Astro.props;

let dots = 0;
let Section;
switch (id) {
  case "opening":
    Section = Quote;
    break;
  case "background":
    dots = 1;
    Section = Bubble;
    break;
  case "context":
    dots = 2;
    Section = Bubble;
    break;
  case "flaws":
    dots = 3;
    Section = BigBubble;
    break;
  case "conflict":
    dots = 4;
    Section = BareBubble;
    break;
  case "problem":
    Section = Quote;
    break;
  case "solution":
    dots = 5;
    Section = BigBubble;
    break;
  case "call-to-action":
    Section = CTA;
    break;
  default:
    Section = Default;
    break;
}
---

<Section {id} {Content} index={dots} />
