---
interface Props {
  Content: any;
  components?: any;
  id: string;
  index?: number;
}
import Dots from "../dots.astro";
const { id, Content, index, components } = Astro.props;
---

<section class="bubble" {id}>
  {index && <Dots top="50px" amount={index} />}
  <Content {components} />
</section>

<style>
  section {
    background-color: var(--background-color);
    position: relative;
    container-type: size;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    overflow: hidden;
    margin: var(--size-2);
    aspect-ratio: 1/1;
    color: var(--white);
    padding: var(--size-9);

    :global(strong) {
      display: block;
      font-size: var(--font-size-3);
      font-weight: var(--font-weight-7);
    }

    :global(ul) {
      padding-block-start: var(--size-5);
    }

    @container (width > 300px) {
      padding-inline: var(--size-10);
    }
  }
</style>
