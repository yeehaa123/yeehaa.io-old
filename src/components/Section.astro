---
interface Props {
  hasIntro?: boolean;
  id?: string;
  elementType?: "hgroup" | "section";
}
const { elementType, id, hasIntro } = Astro.props;
const Element = elementType || "section";
---

<Element {id} class:list={[hasIntro && "has-intro", "is-container"]}>
  <slot name="top" />
  <slot />
  <slot name="bottom" />
</Element>

<style>
  @import "open-props/media";
  .is-container {
    background-color: var(--background-color);
  }

  .is-container > :global(*) {
    max-inline-size: var(--size-lg);
    margin-inline: auto;
    padding-inline: var(--size-7);
  }

  .has-intro {
    > :global(p:first-of-type),
    > :global(p:nth-of-type(2)) {
      text-align: center;
      font-family: var(--font-accent);
      line-height: var(--font-lineheight-2);
      font-size: var(--font-size-5);
      font-weight: var(--font-weight-7);
    }
    > :global(p:last-of-type::after) {
      display: block;
      content: "..";
      line-height: 0.5;
      font-size: var(--font-size-8);
      letter-spacing: var(--font-letterspacing-4);
    }

    :global(a) {
      font-weight: var(--font-weight-9);
    }

    > :global(p:last-of-type) {
      padding-block: var(--size-9);
    }
  }
  @media (--sm-n-above) {
    .is-container {
    }
  }
</style>
