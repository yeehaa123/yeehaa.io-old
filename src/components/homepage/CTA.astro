---
interface Props {
  Content: any;
  id: string;
}

import Section from "../Section.astro";
import Text from "./cta/Text.astro";
const { Content, id } = Astro.props;
---

<>
  <Section {id} backgroundColor="sun" foregroundColor="curtains">
    <Content components={{ p: Text }} />
  </Section>
  <svg viewBox="0 0 1728 690">
    <g clip-path="url(#clip0_130_106)">
      <path
        d="M1747 0V1001H-19V0H-15.422C25.003 383.225 403.3 683.565 864 683.565C1324.7 683.565 1703 383.225 1743.42 0H1747Z"
      ></path>
    </g>
  </svg>
</>

<style>
  svg {
    width: 100%;
    background-color: var(--sun);
  }

  path {
    fill: var(--curtains);
  }
</style>
