---
interface Props {
  Content: any;
  slug: string;
}

import Default from "../Section.astro";
import Tagline from "./Tagline.astro";
import Problem from "./Problem.astro";
import Proposition from "./Proposition.astro";
import Principles from "./Principles.astro";
import CTA from "./CTA.astro";
import Cases from "./Cases.astro";
const { slug: id, Content, ...props } = Astro.props;

let Section;
switch (id) {
  case "tagline":
    Section = Tagline;
    break;
  case "proposition":
    Section = Proposition;
    break;
  case "problem-statement":
    Section = Problem;
    break;
  case "principles":
    Section = Principles;
    break;
  case "cases":
    Section = Cases;
    break;
  case "call-to-action":
    Section = CTA;
    break;
  default:
    Section = Default;
    break;
}
---

<Section {id} {Content} {...props} />
