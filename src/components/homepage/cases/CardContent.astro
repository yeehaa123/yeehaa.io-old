---
interface Props {
  class: string;
  children: any;
}
const { class: className } = Astro.props;
---

<section class:list={[className]}><slot /></section>
<style>
  section {
    aspect-ratio: 1 / 1.5;
    display: flex;
    position: relative;
    flex-direction: column;
    background-color: var(--secondary-color);
    color: var(--text-color);
    border-radius: 110px;
    padding-inline: var(--size-7);
    padding-block-start: 130px;
  }
  section :global(a) {
    color: var(--negative-text-color);
  }
  section :global(a:visited) {
    color: var(--negative-text-color);
  }
  section :global(a:hover) {
    color: var(--primary-color);
  }

  section :global(p:last-of-type) {
    display: flex;
    position: absolute;
    justify-content: center;
    text-align: center;
    padding: var(--size-5);
    bottom: var(--size-5);
  }

  section :global(p:last-of-type a) {
    font-size: var(--font-size-5);
    color: var(--primary-color);
    font-weight: var(--font-weight-7);
  }
</style>
