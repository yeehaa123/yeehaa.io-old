---
interface Props {
  "data-heading-rank": string;
  children: any;
}

const props = Astro.props;
const rank = Number(props["data-heading-rank"]);
import Card from "./Card.astro";
import CardContent from "./CardContent.astro";

let section;
switch (rank) {
  case 3:
    section = { Element: Card, className: "card" };
    break;
  case 4:
    section = { Element: CardContent, className: "card-content" };
    break;
  default:
    section = { Element: "section", className: "cards" };
}

const { Element, className } = section;
---

<Element class={className}><slot /></Element>

<style>
  @import "open-props/media";
  .cards {
    display: flex;
    gap: var(--size-5);

    :global(h2) {
      display: none;
    }
  }
  .cards {
    flex-direction: column;
  }
  @media (--lg-n-above) {
    .cards {
      flex-direction: row;
    }
  }
</style>
