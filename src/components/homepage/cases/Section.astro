---
const props = Astro.props;
const rank = Number(props["data-heading-rank"]);
import Card from "./Card.astro";
import CardContent from "./CardContent.astro";

let section;
switch (rank) {
  case 3:
    section = { Element: Card, className: "card" };
    break;
  case 4:
    section = { Element: CardContent, className: "card-content" };
    break;
  default:
    section = { Element: "section", className: "container" };
}

const { Element, className } = section;
---

<Element class={className}><slot /></Element>

<style>
  @import "open-props/media";
  .container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--size-8);

    padding-block: var(--size-9);
    :global(h2) {
      display: none;
    }
  }
  .card {
    grid-column: span 3;
  }
  @media (--lg-n-above) {
    .card {
      grid-column: span 1;
    }
  }
</style>
