---
interface Props {
  Content: any;
  id?: string;
  backgroundColor?: string;
  foregroundColor?: string;
}
import Section from "./Section.astro";
import Heading from "./Heading.astro";
const { Content, id, backgroundColor = "curtains", foregroundColor = "white" } = Astro.props;
---

<Section
  {id}
  elementType={id === "tagline" ? "hgroup" : "section"}
  {backgroundColor}
  {foregroundColor}
>
  <Content components={{ p: Heading }} />
</Section>
